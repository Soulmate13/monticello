mixin footer
    footer.footer
        .container
            .footer__wrapper
                .footer__top
                    .row
                        .col-3.offset-2
                            a.footer__link(href=`#`)
                                svg.icons.icons--footer.footer__icon
                                    use.footer__icon-use(xlink:href="#icon-monticello-logo")
                        .col-3.offset-3.d-flex.align-items-center
                            .footer__socials.d-flex.justify-content-between
                                a.footer__circle(href="https://www.facebook.com/", target='_blank')
                                    i.fab.fa-facebook-f.footer__social-icon
                                a.footer__circle(href="https://twitter.com/", target='_blank')
                                    i.fab.fa-twitter.footer__social-icon
                                a.footer__circle(href="https://www.instagram.com/", target='_blank')
                                    i.fab.fa-instagram.footer__social-icon
                .footer__bottom
                    .row
                        .col-5.offset-2
                            .footer__info Copyrights &copy; 2017 Monticello
                            a.footer__author
                                .footer__author-info Made with 
                                    i.fas.fa-heart.footer__heart-icon
                                .footer__author-info by Ga Huy

            
